# Maintainer: Arghya Sarkar <arghyasarkar.nolan@gmail.com>
pkgname=calinix-alacritty-git
_pkgname=calinix-alacritty-git
pkgver=1.r47.ddcfadc
pkgrel=1
epoch=
pkgdesc="The default alacritty configuration for CalinixOS."
arch=('x86_64')
url="https://www.github.com/Calinix-Team/calinix-alacritty-git.git"
license=('GPL3')
groups=()
depends=(alacritty)
makedepends=(git)
checkdepends=()
optdepends=()
provides=(calinix-alacritty-git)
conflicts=()
replaces=()
backup=()
options=()
install=${pkgname}.install
changelog=
source=("git+$url")
noextract=()
md5sums=('SKIP')
validpgpkeys=()

pkgver() {
	cd "${_pkgname}"
    printf "1.r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    cd calinix-alacritty-git
    install -Dm755 etc/skel/.config/alacritty/alacritty.yml ${pkgdir}/etc/skel/.config/alacritty/alacritty.yml
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    install -Dm644 README.md "${pkgdir}/usr/share/doc/${pkgname}/README.md"
}
